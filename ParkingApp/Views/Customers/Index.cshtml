@model ParkingApp.Models.Customer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<link rel="stylesheet" href="/css/new.css">
<h1 style="margin: 0 auto; justify-content: space-around; width: 500px; border: 1px solid black; border-bottom-color: transparent; padding: 20px; margin: 0 auto; background-color: white; box-shadow: 5px 5px 5px black;">
    Please Choose Your Selection
</h1>
<body class="bodyCustomerIndex">
    <link rel="stylesheet" href="/css/new.css">
    <div class="box">
        <form>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">

                @Html.ActionLink("Profile Details", "Details", new { id = Model.Id })
               

            </p>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">
                @Html.ActionLink("Edit Your Information", "Edit", new { id = Model.Id })
            </p>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">
             
                @Html.ActionLink("Find a spot", "AllSpots", new { id = Model.Id })
            </p>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">
                @Html.ActionLink("Delete your profile", "Delete", new { id = Model.Id })
            </p>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">
                @Html.ActionLink("Add a vehicle to your account", "AddVehicle", new { id = Model.Id })
            </p>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">
                @Html.ActionLink("Your vehicles", "ViewVehicles", new { id = Model.Id })
            </p>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">
                @Html.ActionLink("Your Reservations", "YourReservations", new { id = Model.Id })
            </p>
            <p style="border: 2px solid black; padding: 4px 4px 4px 4px; text-align: center;">
                @Html.ActionLink("Pay Your Bill", "PayBill", new { id = Model.Id })
            </p>
        </form>
    </div>
</body>